@model IEnumerable<BestBidEnergy.Models.Buyer> 
@{
    ViewBag.Title = "Buyer Profile";
}
<style>
    table {
    width: 30%;
}
td {
    height: 30px;
    width: 60%;
    text-align: left;
    text-indent: 10px;    
    }
    </style>
<ul class="nav nav-tabs">
    <li role="presentation"><a href="/Buyers/Index">Home</a></li>
    <li role="presentation"><a href="/Buyers/Contracts">Contracts</a></li>
    <li role="presentation" class="active"><a href="/Buyers/Profile">Profile</a></li>
</ul>

<h2> Buyer Profile </h2>
<div class="container">
    @foreach (var todo in Model) {
    <table >
        <tr> 
            <th class="text-right"> Name: </th>
            <td> @todo.Contact_Name</td></tr>
        <tr>
            <th class="text-right"> Company:</th>
            <td> @todo.Company </td></tr>   
        <tr> 
            <th class="text-right"> Account Number:</th> 
            <td> @todo.Account_Num </td></tr>
        <tr>
            <th class="text-right">Credit Score:</th>
            <td>@todo.Credit_Rating         </td> </tr>
        <tr>
            <th class="text-right">Account Type:</th> 
            <td> @todo.Account_Type </td>
            </tr>
        </table>
    }
    </div>